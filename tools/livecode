$maincode='';

@fns=@ARGV;
$inmac='';
while (@fns) {
  $_=shift @fns;
  if (m!^(.*)/([^/]+)$!) {
    $prefix=$1;
  } else {
    $prefix='.';
  }
  open(MP,$_);
  while (<MP>) {
    next if $_ eq "\n";
    if (/^(var)?def\s+([a-z0-9_.]+)\s*(\(|=)/) {
      $macdef{$2}=$_;
      $inmac=$2 unless /enddef/;
    } elsif (($inmac ne '') && /^enddef/) {
      $macdef{$inmac}.=$_;
      $inmac='';
    } elsif (/^input\s+(.*);/) {
      push @fns,"$prefix/$1";
    } elsif (/^\%/) {
      # skip comments
    } elsif ($inmac ne '') {
      $macdef{$inmac}.=$_;
    } else {
      $maincode.=$_;
      if (/^(.*)code="(.*)/) {
        $maincode.="% $1code=\"hangul.$2\n";
      }
    }
  }
  close(MP);
  print "FFFOOOOOO! $inmac\n" if $inmac ne '';
}

$towrite='';
%seen=();
while ($maincode ne '') {
  $newdefs='';
  foreach (sort keys %macdef) {
    if ((!$seen{$_}) && (index($maincode,$_)>=0)) {
      $newdefs.=$macdef{$_};
      $seen{$_}=1;
    }
  }
  $towrite=$maincode.$towrite;
  $maincode=$newdefs;
}

print $towrite;
