#!/usr/local/bin/fontanvil
#Needs: fonts/AddExtremumTest.sfd

#Check that AddExtrema doesn't distort the curve (by much).

srcdir=GetEnv("srcdir")
if (srcdir=="")
  srcdir=""
else
  srcdir=srcdir+"/"
endif

Open(srcdir+"tests/fonts/AddExtremumTest.sfd")
Reencode("Original")
SelectAll()
Copy()
AddExtrema()
CompareGlyphs(-1,3)
CompareGlyphs()

Copy()
Simplify()
CompareGlyphs(-1,3)
GetCoverageCounts()
