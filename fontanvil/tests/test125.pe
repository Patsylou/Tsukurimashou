#!/usr/local/bin/fontanvil
#Needs: fonts/MinionPro-Regular.fea

if (GetEnv("distcheck_hack")=="0.3")
  Quit(77)
endif

srcdir=GetEnv("srcdir")
if (srcdir=="")
  srcdir=""
else
  srcdir=srcdir+"/"
endif

# Check that detach glyph works
New()
MergeFeature(srcdir+"tests/fonts/MinionPro-Regular.fea")
Generate("ttmp/Untitled2.otf")
Open("ttmp/Untitled2.otf")
if ( SizeOf(GetLookups("GSUB"))<=0 )
  Error("No lookups")
endif
Close()

New()
MergeFeature(srcdir+"tests/fonts/ffMinionPro-Regular.fea")
Generate("ttmp/Untitled2.otf")
Open("ttmp/Untitled2.otf")
if ( SizeOf(GetLookups("GSUB"))<=0 )
  Error("No lookups")
endif
Close()
GetCoverageCounts()
