#!/usr/local/bin/fontanvil
#Needs: fonts/NimbusLGCUni-Regular.sfd

#tests whether we get unicode encodings right when there are multiple encodings
# per glyph
#tests whether we get references right in postscript fonts

srcdir=GetEnv("srcdir")
if (srcdir=="")
  srcdir=""
else
  srcdir=srcdir+"/"
endif

Open(srcdir+"tests/fonts/NimbusLGCUni-Regular.sfd")
Generate("ttmp/Nimbus.otf")
Generate("ttmp/Nimbus.ttf")
Generate("ttmp/Nimbus.pfb")
"helper118A.pe"(srcdir+"tests/fonts/NimbusLGCUni-Regular.sfd","ttmp/Nimbus.otf")
"helper118A.pe"(srcdir+"tests/fonts/NimbusLGCUni-Regular.sfd","ttmp/Nimbus.ttf")
"helper118B.pe"(srcdir+"tests/fonts/NimbusLGCUni-Regular.sfd","ttmp/Nimbus.otf")
"helper118B.pe"(srcdir+"tests/fonts/NimbusLGCUni-Regular.sfd","ttmp/Nimbus.pfb")
GetCoverageCounts()
Quit()
